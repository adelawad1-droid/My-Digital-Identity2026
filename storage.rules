rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // السماح برؤية أي صورة مرفوعة لكي تظهر في البطاقات للزوار
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // حصر عمليات الرفع والحذف على صاحب المجلد أو الأدمن فقط
    match /uploads/{userId}/{allPaths=**} {
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == "adelawad1@gmail.com");
    }
  }
}