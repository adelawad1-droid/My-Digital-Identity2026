rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /uploads/{userId}/{allPaths=**} {
      // السماح بالقراءة للجميع (لكي تظهر الصور في البطاقات العامة)
      allow read: if true;
      // السماح بالكتابة فقط لصاحب المجلد أو الأدمن
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == "adelawad1@gmail.com");
    }
  }
}