rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // السماح للجمهور برؤية الصور لكي تظهر في البطاقات عند مشاركة الرابط
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // حصر عمليات الرفع والحذف على صاحب الحساب أو الأدمن
    match /uploads/{userId}/{allPaths=**} {
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == "adelawad1@gmail.com");
    }
  }
}